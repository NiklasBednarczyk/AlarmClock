<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="alarmEditorViewModel"
            type="com.example.alarmclock.screens.alarm.alarmeditor.AlarmEditorViewModel" />

        <variable
            name="dayOfWeek"
            type="java.time.DayOfWeek" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ToggleButton
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:onClick="@{() -> alarmEditorViewModel.alarmEditorListener.onDayButtonClick(dayOfWeek)}"
            app:bind_alarmDayAlarm="@{alarmEditorViewModel.alarm}"
            app:bind_alarmDayDayOfWeek="@{dayOfWeek}" />

    </LinearLayout>
</layout>


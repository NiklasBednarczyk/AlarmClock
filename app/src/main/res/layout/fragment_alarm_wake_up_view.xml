<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="alarmWakeUpViewViewModel"
            type="com.example.alarmclock.screens.alarm.alarmwakeupview.AlarmWakeUpViewViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.AlarmWakeUpActivity">

        <TextClock
            android:id="@+id/current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            bind_alarmName="@{alarmWakeUpViewViewModel.alarm}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/snooze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> alarmWakeUpViewViewModel.onActionSnooze()}"
            android:text="@string/snooze"
            android:visibility="@{alarmWakeUpViewViewModel.eventSnoozed ? View.GONE : View.VISIBLE}" />

        <TextView
            android:id="@+id/snooze_count"
            bind_alarmSnoozeCount="@{alarmWakeUpViewViewModel.snoozeCount}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{alarmWakeUpViewViewModel.eventSnoozed ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/snooze_time"
            bind_alarmSnoozeTime="@{alarmWakeUpViewViewModel.snoozeTime}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{alarmWakeUpViewViewModel.eventSnoozed ? View.VISIBLE : View.GONE}" />

        <Button
            android:id="@+id/dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> alarmWakeUpViewViewModel.onActionDismiss()}"
            android:text="@string/dismiss" />

    </LinearLayout>
</layout>
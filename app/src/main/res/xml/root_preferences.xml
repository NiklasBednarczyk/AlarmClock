<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preference_category_title_general">

        <ListPreference
            app:defaultValue="@string/preference_default_value_theme"
            app:entries="@array/preference_entries_theme"
            app:entryValues="@array/preference_values_theme"
            app:icon="@drawable/ic_baseline_wallpaper_24"
            app:key="@string/preference_key_theme"
            app:title="@string/preference_title_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_title_alarm_default">

        <ListPreference
            app:defaultValue="@string/preference_default_value_alarm_snooze_length"
            app:entries="@array/preference_entries_alarm_snooze_length"
            app:entryValues="@array/preference_values_alarm_snooze_length"
            app:icon="@drawable/ic_baseline_snooze_24"
            app:key="@string/preference_key_alarm_snooze_length"
            app:title="@string/preference_title_snooze_length"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/preference_value_alarm_vibration_type_normal"
            app:entries="@array/preference_entries_alarm_vibration_type"
            app:entryValues="@array/preference_values_alarm_vibration_type"
            app:icon="@drawable/ic_baseline_vibration_24"
            app:key="@string/preference_key_alarm_vibration_type"
            app:title="@string/preference_title_vibration_type"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="TextViewStyleBigAndBold">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.PaddingSmall" parent="TextViewStyle">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="TextViewStyle.PaddingSmall.TextAlignmentCenter" parent="TextViewStyle.PaddingSmall">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:layout_margin">@dimen/margin_layout_default</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="TextClockStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_biggest</item>
    </style>

</resources>